nav
  .section-content
    h1 Panel Picker

section.common.green
  .section-content
    h1 Update your profile
    - flash.each do |key, message|
      h6 = message


section.common.sm-centered
  .section-content
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|

      = f.label :name, 'Name'
      = f.text_field :name, required: 'required', autofocus: 'autofocus'

      = f.label :email, 'E-mail Address'
      = f.text_field :email, required: 'required', autofocus: 'autofocus'

      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        p
          |
            Currently waiting confirmation for: #{resource.unconfirmed_email}

      = f.label :password, 'New Password'
      = f.password_field :password, required: 'required'

      = f.label :password_confirmation, 'Confirm New Password'
      = f.password_field :password_confirmation

      = f.label :password, 'Curent Password (needed to confirm changes)'
      = f.password_field :current_password, required: 'required'

      = f.submit 'Update'
