%html.no-js(lang="en" xmlns:og="http://ogp.me/ns#")
  <!--<![endif]-->
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    %title= content_for(:title).presence || @page.try(:browser_title) || "Denver Startup Week"
    %meta(name="description" content="#{content_for(:description).presence || @page.try(:description) || 'CirrusMD'}")
    %meta(name="keywords" content="#{content_for(:keywords).presence || @page.try(:keywords) || 'CirrusMD'}")
    %meta(name="author" content="Mode Set")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(name="imagetoolbar" content="no")
    %meta(name="apple-touch-fullscreen" content="yes")
    %meta(name="apple-mobile-web-app-capable" content="yes")
    %meta(name="apple-mobile-web-app-status-bar-style" content="black")
    %a(href="https://plus.google.com/105192639808515157053" rel="publisher")Google+
    = stylesheet_link_tag :application, :media => "all"

    /[if lte IE 8]
      = stylesheet_link_tag :dinosaur, :media => "all"
      = javascript_include_tag :polyfill
      -# Respond needs this hackery to work properly on a CDN
      - unless ActionController::Base.asset_host.nil?
        %link(href="#{asset_path('respond-proxy.html')}" id="respond-proxy" rel="respond-proxy")
        %link(href="#{asset_path('respond.proxy.gif')}" id="respond-redirect" rel="respond-redirect")
        = javascript_include_tag javascript_path('respond.proxy.js')

    :javascript
      (function(H){H.className=H.className.replace(/\bno-js\b/,'js')})(document.documentElement)

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-40894134-1']);
      _gaq.push(['_setDomainName', '.denverstartupweek.org']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    = csrf_meta_tag

  %body(id="#{'mercury_invasion' if in_mercury_invasion?}" class="body-#{current_body_class}" role="document")
    %section.main
      %section.content
        = render partial: 'layouts/shared/navigation'
        = render partial: 'layouts/shared/masthead'
        %section.content-container(role="main")
        = yield
    = render partial: 'layouts/shared/footer'
    = render partial: 'layouts/shared/flash_message'
    = render partial: 'layouts/shared/spinner'

    = jquery_include_tag :google, :"data-turbolinks-eval" => false
    = javascript_include_tag :application, :"data-turbolinks-eval" => false


