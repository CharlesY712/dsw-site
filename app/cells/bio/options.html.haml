.mercury-display-pane(style='width: 500px')
  = form_for @snippet, :url => '#', html: { class: 'form-horizontal'} do |f|
    %fieldset
      %legend Bio Snippet
      = f.hidden_field :image
      .control-group
        = f.label :full_name, class: 'control-label'
        .controls
          = f.text_field :full_name
      .control-group
        = f.label :company, class: 'control-label'
        .controls
          = f.text_field :company
      .control-group
        = f.label :title, class: 'control-label'
        .controls
          = f.text_field :title
      .control-group
        = f.label :copy, class: 'control-label'
        .controls
          = f.text_field :copy
    .form-actions.mercury-display-controls
      = f.submit class: 'btn btn-primary'
